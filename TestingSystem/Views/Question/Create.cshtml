@model TestingSystem.Models.Question
@using TestingSystem.Models

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Question</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Text, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Text)
                @Html.ValidationMessageFor(model => model.Text)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Points, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Points)
                @Html.ValidationMessageFor(model => model.Points)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Explanation, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Explanation)
                @Html.ValidationMessageFor(model => model.Explanation)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ThematicAreaID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ThematicAreaID", String.Empty)
                @Html.ValidationMessageFor(model => model.ThematicAreaID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Answers, "Answers", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Text</th>
                            <th>Correct Answer</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="answers">
                        @Html.EditorFor(model => model.Answers)
                    </tbody>
                </table>
                <div>
                    @Html.ValidationMessageFor(model => model.Answers)
                </div>
                @Html.AddLink("Add More Answers", "#answers", ".answer", "Answers", typeof(TestingSystem.Models.Answer))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval", "~/Scripts/CustomJs.js")
}
