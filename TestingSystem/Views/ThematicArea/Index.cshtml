@model IEnumerable<TestingSystem.Models.ThematicArea>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table id="thematic_areas" class="treetable table">
    <tbody>
        @foreach (var item in Model)
        {
            <tr data-tt-id=@item.ID>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
                @foreach (var child in item.SubThematicAreas)
                {
                    @Html.DisplayFor(modelItem => child)
                }
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval", "~/Scripts/make-jquery-treetable.js")
}
